{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "src",
    "rootDir": "src",
    "allowImportingTsExtensions": true,

    "lib": ["DOM", "DOM.Iterable", "ES2017"],
    "target": "ES2017",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,

    "sourceMap": true,

    "strict": true,
    "downlevelIteration": true
  },

  "include": ["src"]
}